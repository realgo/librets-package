#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@  --with autotools-dev

override_dh_auto_configure:
	./autogen.sh
	dh_auto_configure -- --disable-java --disable-perl --enable-fPIC --enable-shared_dependencies --prefix=/usr/bin
#	dh_auto_configure -- --disable-java --disable-perl --enable-fPIC --enable-shared_dependencies --prefix=/usr/bin --disable-python3

override_dh_auto_install:
	$(MAKE) DESTDIR=$$(pwd)/debian/librets prefix=/usr install
	pwd

override_dh_clean:
	rm -f configure
	rm -f project/build/config.guess
	rm -f project/build/config.sub
	rm -f debian/librets/usr/lib/python*/dist-packages/librets.pyc
	rm -f debian/librets/usr/lib/python*/dist-packages/__pycache__/*
	dh_clean
